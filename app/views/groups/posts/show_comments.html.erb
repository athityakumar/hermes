<body class="theme-red">

  <%= render 'shared_partials/loader.html.erb' %>
  <%= render 'shared_partials/header.html.erb' %>

  <section>
    <%= render 'shared_partials/sidebar_left.html.erb', user: @current_traveller ? @current_traveller : @current_staff %>
  </section>




    <section class="content">
                    <h1 style="text-align: center;"> <a href="/groups/<%= @group.id %>/posts">Group "<%= @group.name %>"</a> </h1>
                    <h4 style="text-align: center;"> Post "<%= @post.description %>" </h4>
            <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                
                <div class="header">
                    <h2> All comments in this post </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><div class="body">
                    <% @post.comments.each do |comment| %>

                    <div class="media">
                        <div class="media-left">
                            <a href="javascript:void(0);">
                                <img class="media-object" src="<%= comment.user.image %>" width="64" height="64">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading"><%= comment.user.name %></h4> 
                            <%= comment.description %>
                        </div>
                    </div>

                    <% end %>

                    </div>
           
                </div>
           


                        <form class="card" action="/groups/<%= @group.id %>/posts/<%= @post.id %>" method="POST">
                            <div class="header">
                                <h2>Add a new comment</h2>
                                <ul class="header-dropdown m-r--5">
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                            <i class="material-icons">more_vert</i>
                                        </a>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="javascript:void(0);">Action</a></li>
                                            <li><a href="javascript:void(0);">Another action</a></li>
                                            <li><a href="javascript:void(0);">Something else here</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="form-line">
                                                
                                                <textarea name="description" rows="4" class="form-control no-resize" placeholder="Please type what you want..."></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                        <div class="block-header"><button type="submit" class="btn btn-primary" id ="sent" onfocus="clearContents(this);">Send</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- #END# Textarea -->
    
    </section>
</body>
